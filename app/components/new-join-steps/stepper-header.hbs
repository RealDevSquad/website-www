<div class="form-header" data-test-form-header>
  <div class="form-header__content">
    <div class="form-header__text">
      <h1 class="form-header__heading">RDS Application Form</h1>
    </div>
    <div class="form-header__step-count" aria-live="polite">
      <span class="form-header__step-current" data-test-current-step>{{@currentStep}}</span>
      <span class="form-header__step-total" data-test-total-steps>of {{@totalSteps}}</span>
    </div>
  </div>
  <div class="progress-bar" data-test-progress role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow={{this.progressPercentage}}>
    <div class="progress-bar__fill" data-test-progress-fill style={{this.progressStyle}}></div>
  </div>
</div>