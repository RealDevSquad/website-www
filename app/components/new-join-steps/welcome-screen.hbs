<div class="stepper-welcome" data-test="welcome-screen">
  <div class="stepper-welcome__logo" data-test="welcome-logo">
    <img
      src="assets/images/rds-logo.png"
      alt="RDS"
    />
  </div>

  <h1 class="stepper__greeting" data-test="welcome-greeting">Ready to apply to RDS?</h1>

  <div>
    <div class="stepper-welcome__info-item--bullet">
      This form should take up to 10 mins to fill.
    </div>

    <div class="stepper-welcome__info-item--bullet">
      Keep your professional headshot ready.
    </div>

    <div class="stepper-welcome__info-item--bullet">
      Once filled, user will be able to view quests to increase their rankings and their selection chances.
    </div>
  </div>

   <label class="stepper-welcome__checkbox">
  <input
    type="checkbox"
    data-test="terms-checkbox"
    checked={{this.applicationTerms.hasUserAcceptedTerms}}
    {{on "change" this.handleCheckboxClick}}
  />

  <span class="stepper-welcome__checkbox-text">
    I accept the terms and conditions.
  </span>
</label>
</div>

{{#if this.showModal}}
    <TermsModal
      @isOpen={{this.showModal}}
      @onAccept={{this.acceptTerms}}
      @onClose={{this.closeModal}}
    />
{{/if}}