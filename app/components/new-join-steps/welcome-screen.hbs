<div class="stepper-welcome">
  <div class="stepper-welcome__logo">
    <img
      src="assets/images/rds-logo.png"
      alt="RDS"
    />
  </div>

  <h1 class="stepper__greeting">Ready to apply to RDS?</h1>

  <div>
    <div class="stepper-welcome__info-item--bullet">
      This form should take up to 10 mins to fill.
    </div>

    <div class="stepper-welcome__info-item--bullet">
      Keep your professional headshot ready.
    </div>

    <div class="stepper-welcome__info-item--bullet">
      Once filled, user will be able to view quests to increase their rankings and their selection chances.
    </div>
  </div>

    <div class="stepper-welcome__checkbox">
      <input
        type="checkbox"
        checked={{@isTermsAccepted}}
        readonly
        {{on "click" this.openModal}}
      />
      <span class="stepper-welcome__checkbox-text" {{on "click" (fn (mut this.showModal) true)}}>
        I accept the terms and conditions.
      </span>
    </div>
</div>

{{#if this.showModal}}
    <TermsModal
      @isOpen={{this.showModal}}
      @onAccept={{this.acceptTerms}}
      @onClose={{this.closeModal}}
      @isTermsAccepted={{@isTermsAccepted}}
    />
{{/if}}
